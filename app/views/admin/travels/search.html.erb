<style>
  form {
    text-align: center;
  }
</style>

<title>Ricerca Tratta</title>
<% if flash[:notice] %>
  <div class="alert alert-success" style="margin: 20px; padding: 10px; color: green; background-color: #e6ffe6; border: 1px solid #99cc99;">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger" style="margin: 20px; padding: 10px; color: red; background-color: #ffe6e6; border: 1px solid #cc9999;">
    <%= flash[:alert] %>
  </div>
<% end %>


<h3 style="margin-top: 30px; text-align: center;">Cerca viaggi</h3>

<div style="text-align: center; margin-top: 20px;">
  <%= form_with url: results_admin_travels_path,method: :post, local: true do |f| %>
    <p>
      <%= f.label :part, "Da" %>
      <%= f.text_field :part, list: "stazioni", maxlength: 27, placeholder: "Inserisci stazione di partenza" %>

      <button onclick="swap();" class="swap" type="button">&rlarr;</button>

      <%= f.label :arr, "A" %>
      <%= f.text_field :arr, list: "stazioni", maxlength: 27, placeholder: "Inserisci stazione di arrivo" %>

      <datalist id="stazioni">
        <option value="Bologna Centrale"></option>
        <option value="Firenze Santa Maria Novella"></option>
        <option value="Milano Centrale"></option>
        <option value="Napoli Centrale"></option>
        <option value="Roma Termini"></option>
        <option value="Torino Porta Nuova"></option>
        <option value="Venezia Santa Lucia"></option>
      </datalist>
    </p>

    <%= f.submit "Cerca", class: "button" %>
  <% end %>
</div>
