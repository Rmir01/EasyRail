<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
<title>Registrati</title>
<style>
		form {
			width: 276px;
		}
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "nome" %>
  </div>

  <div class="field">
    <%= f.label :cognome %><br />
    <%= f.text_field :surname, autofocus: true, autocomplete: "cognome" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(minimo <%= @minimum_password_length %> caratteri)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrati" %>
  </div>
  <div class="button" style="width: 100%">
  <%= link_to "GiÃ  registrato? Effettua il login", new_user_session_path, class: "center" %>
  </div>
<% end %>
