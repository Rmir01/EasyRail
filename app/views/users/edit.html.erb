<title>Modifica profilo</title>

<style>
input {
	width: 200px;
}
</style>

<%= form_with model: @user, url: user_profile_path, method: :patch, local: true do |f| %>
  <div class="formhead">Modifica i tuoi dati</div>
  <div class="form-group">
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :surname, "Cognome" %>
    <%= f.text_field :surname, class: 'form-control', required: true %>
  </div>

<% if false %> 
ERROR undefined method `reset_password_token=' for an instance of User (MANCA ATTRIBUTO NELLA TABELLA)
  <div class="form-group">
    <%= f.label :password, "Nuova Password" %>
    <%= f.password_field :password, class: 'form-control', placeholder: " [invariata]" %>
  </div>

  <div class="">
    <%= f.label :password_confirmation, "Conferma Password" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
<% end %>
  <div style="text-align: center;">
    <%= f.submit 'Aggiorna', class: 'button' %>
    <%= link_to 'Annulla', user_profile_path, class: 'button' %>
  </div>
<% end %>
